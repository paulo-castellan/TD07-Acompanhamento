<!DOCTYPE html>
<html>
  <head>
    <title>Flats</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <div><%= link_to 'Início', root_path, style:"font-size: 20pt" %></div>
      <% if property_owner_signed_in? %>
        <%= link_to ' Meus Imóveis', my_properties_properties_path %>
        <%= current_property_owner.email %>
        <%= link_to 'Logout', destroy_property_owner_session_path, method: :delete  %>
      <% else %>
        <%= link_to 'Entrar', new_property_owner_session_path %>
      <% end %>
    </nav>
    <%= notice %>
    <%= yield %>
  </body>
</html>
